<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.modular.demos.mapper.TestConMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stylefeng.guns.modular.demos.entity.TestCon">
        <id column="Id" property="Id" />
        <result column="Name" property="Name" />
        <result column="ConId" property="ConId" />
        <result column="Sman" property="Sman" />
        <result column="ConDate" property="ConDate" />
        <result column="Eman" property="Eman" />
        <result column="ConSignDate" property="ConSignDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        Id AS "Id", Name AS "Name", ConId AS "ConId", Sman AS "Sman", ConDate AS "ConDate", Eman AS "Eman", ConSignDate AS "ConSignDate"
    </sql>

    <select id="selectCons" resultType="map">
        select
        <include refid="Base_Column_List"/>
        from test_con
        <if test="condition != null">
            where name like CONCAT('%',#{condition},'%')
        </if>
    </select>

    <select id="customList" resultType="cn.stylefeng.guns.modular.demos.model.result.TestConResult" parameterType="cn.stylefeng.guns.modular.demos.model.params.TestConParam">
        select
        <include refid="Base_Column_List"/>
        from test_con where 1 = 1
    </select>

    <select id="customByDetail" resultType="cn.stylefeng.guns.modular.demos.model.result.TestConResult" >
        select
        <include refid="Base_Column_List"/>
        from test_con
        <if test="conId != null">
            where Id = #{conId}
        </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.stylefeng.guns.modular.demos.model.params.TestConParam">
        select
        <include refid="Base_Column_List"/>
        from test_con where 1 = 1
    </select>

    <select id="customPageList" resultType="cn.stylefeng.guns.modular.demos.model.result.TestConResult" parameterType="cn.stylefeng.guns.modular.demos.model.params.TestConParam">
        select
        <include refid="Base_Column_List"/>
        from test_con where 1 = 1
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.stylefeng.guns.modular.demos.model.params.TestConParam">
        select
        <include refid="Base_Column_List"/>
        from test_con where 1 = 1
    </select>

</mapper>
